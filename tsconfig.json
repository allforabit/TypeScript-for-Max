{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "esnext",
		"target": "es3",
		"ignoreDeprecations": "5.0",
		"strict": false,
		"noImplicitAny": true,
    "allowJs": true,
    "sourceMap": false,
		"outDir": "./dist",
		"baseUrl": "src",
		"types": ["maxmsp"],
		"lib": ["es6"],
  },
	"include": [
		"./src/*.ts",
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	],

}
